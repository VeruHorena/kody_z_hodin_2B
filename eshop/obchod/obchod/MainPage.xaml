<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obchod.MainPage">

    <StackLayout Padding="10">
        <Label Text="Seznam produktů" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

        <ScrollView>
            <VerticalStackLayout x:Name="ProduktyStack"></VerticalStackLayout>
        </ScrollView>

        <Button Text="Zobrazit košík" Clicked="ZobrazitKosik_Clicked" />
    </StackLayout>

</ContentPage>
