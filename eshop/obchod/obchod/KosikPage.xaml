<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obchod.KosikPage"
             Title="Kosik">
    <StackLayout Padding="10">
        <Label Text="Vas kosik" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

        <ScrollView>
            <VerticalStackLayout x:Name="KosikStack"></VerticalStackLayout>
        </ScrollView>

        <Label x:Name="CelkovaCenaLabel" FontSize="18" FontAttributes="Bold" TextColor="Red" HorizontalOptions="Center"/>
    
        <Button Text="Zpet na produkty" Clicked="BtnZpet_Clicked" />
    </StackLayout>
</ContentPage>